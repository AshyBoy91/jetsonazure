# Azure IoT Hub Configuration
# Get this from your Azure IoT Hub device connection string
AZURE_IOT_CONNECTION_STRING=HostName=your-iot-hub.azure-devices.net;DeviceId=your-device-id;SharedAccessKey=your-shared-access-key

# Device Configuration
DEVICE_ID=jetson-nano-001
DEVICE_TYPE=jetson-nano

# Telemetry Configuration
TELEMETRY_INTERVAL=30
ENABLE_CPU_METRICS=true
ENABLE_MEMORY_METRICS=true
ENABLE_DISK_METRICS=true
ENABLE_TEMPERATURE_METRICS=true

# Update Configuration
AUTO_UPDATE_ENABLED=false
GITHUB_REPO=your-username/your-repo-name
GITHUB_TOKEN=your-github-token-optional
UPDATE_BRANCH=main

# Logging Configuration
LOG_LEVEL=INFO

# Jetson Nano Specific Configuration
JETSON_STATS_ENABLED=true
GPU_METRICS_ENABLED=true 